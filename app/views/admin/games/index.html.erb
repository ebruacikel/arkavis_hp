<h1>Listing games</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Slogan</th>
    <th>About</th>
    <th>Features</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.slogan %></td>
    <td><%= game.about %></td>
    <td><%= game.features %></td>
    <td><%= link_to 'Show', admin_game_path(game) %></td>
    <td><%= link_to 'Edit', edit_admin_game_path(game) %></td>
    <td><%= link_to 'Destroy', admin_game_path(game), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

