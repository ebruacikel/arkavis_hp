<h1>Listing pages</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Category</th>
    <th>Featured</th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= link_to(page.title, page ) %></td>
    <td><%= page.body %></td>
    <td><%= page.category.name %></td>
    <td><%= page.featured %></td>
    <td><%= link_to 'Show', admin_page_path(page), :class => "btn" %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page), :class => "btn" %></td>
    <td><%= link_to 'Destroy', admin_page_path(page), :confirm => 'Are you sure?', :method => :delete, :class => "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', new_admin_page_path, :class => "btn" %>
