<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= link_to 'Show', category, :class => "btn" %></td>
    <td><%= link_to 'Edit', edit_category_path(category), :class => "btn" %></td>
    <td><%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete, :class => "btn" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path, :class => "btn" %>
